<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/setting_rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bar" >

        <TextView
            android:id="@+id/setting_tv_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/text_setting"
            android:textColor="#FFF" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setting_rl_top"
        android:layout_margin="20dp"
        android:background="@drawable/dotted_back" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/setting_rl_updatepersonalinformation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/setting_iv_updatepersonalinformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow" />

                    <TextView
                        android:id="@+id/setting_tv_updatepersonalinformation"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/setting_iv_updatepersonalinformation"
                        android:gravity="right"
                        android:text="@string/setting_update_personal_information" />
                </RelativeLayout>

                <View
                    android:id="@+id/setting_view_updatepersonalinformation"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/setting_rl_updatepersonalinformation"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/dash_line" />

                <LinearLayout
                    android:id="@+id/setting_ll_setting_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_view_updatepersonalinformation"
                    android:orientation="vertical" >
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/setting_rl_contact"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_ll_setting_dynamic"
                    android:clickable="true"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/setting_iv_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow" />

                    <TextView
                        android:id="@+id/setting_tv_contact"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/setting_iv_contact"
                        android:gravity="right"
                        android:text="@string/contactus_header" />
                </RelativeLayout>

                <View
                    android:id="@+id/setting_view_contact"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/setting_rl_contact"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/dash_line" />
                 <RelativeLayout
                    android:id="@+id/setting_rl_logout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_rl_contact"
                    android:clickable="true"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/setting_iv_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow" />

                    <TextView
                        android:id="@+id/tv_logoutlink"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/setting_iv_logout"
                        android:gravity="right"
                         android:text="התנתק" />
                </RelativeLayout>
                  <!-- <TextView
                android:id="@+id/tv_logoutlink"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_view_contact"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text="התנתק" /> -->
            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>

</RelativeLayout>