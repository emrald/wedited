<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:padding="3dp"
     >
    
    <ImageView android:id="@+id/rowinvite_iv_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:src="@drawable/thumb_grey"
        android:layout_marginLeft="5dp"/>
    
    <TextView android:id="@+id/rowinvite_tv_nos"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rowinvite_iv_thumb"
        android:text="2/3"
        android:layout_marginLeft="3dp"/>
    <TextView android:id="@+id/rowinvite_tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rowinvite_tv_nos"
        android:text="2/3"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:gravity="right"/>
